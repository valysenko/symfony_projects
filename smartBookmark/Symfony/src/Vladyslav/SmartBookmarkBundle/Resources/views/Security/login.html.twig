{% extends '::layout.html.twig' %}

{% block title %}SmartBookmark:login{% endblock %}

{% block body %}
    {% block languages %}
    {% endblock %}
    {% block menu %}
    {% endblock %}
    {% block content %}


        <div align="center" class="login_block">

        <form action="{{ path('check_path') }}" method="POST">

            {#<a href="{{ path('index_page') }}">#}
                <div class="security_logo">
                    <a href ="{{ path('index_page') }}" id="href">
                        <div class="orange_logo"> smartBookmark</div>
                    </a>
                </div>
            <td class="logo" >

            {#</a>#}

            <table class="security_table">
                <tr style="height: 10px;"></tr>
                <tr style="height: 10px;"></tr>

                <tr>

                    <td>
                        <input type="text" class="input_login"  id="username" placeholder="{% trans %}Логін {% endtrans %}"
                               name="_username" />
                    </td>
                </tr>
                <tr>

                    <td>
                        <input type="password" class="input_login" id="password" placeholder="{% trans %}Пароль {% endtrans %}"
                               name="_password" />
                    </td>
                </tr>
                <tr>
                    <td style="color:red">{% if error %}
                      {{ error.message | replace({
                            'Bad credentials': 'Невірний логін/пароль'
                      })}}

                    {% endif %}
                    </td>
                </tr>
                <tr style="height: 10px;">
                    <td style="text-align:left;padding-left:35px;height:15px;">
                        <a href="{{ path('restore_password') }}" style="color:#ff6e22; text-decoration:none"> {% trans %}Забули пароль? {% endtrans %}</a>
                    </td>
                </tr>
                <tr>
                    <td>
                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                                >
                    </td>
                </tr>
                <tr>
                    <td>
                        <input type="submit" class="add_button" id="enter_button" name="login"
                               value="{% trans %}Вхід {% endtrans %}" />
                    </td>
                </tr>

                <tr style="height: 10px;"></tr>
                <tr style="height: 10px;"></tr>
            </table>

        </form>
        </div>
    {% endblock %}


    <div id="container">






    </div>
{%endblock%}
{% block footer %}
{% endblock %}