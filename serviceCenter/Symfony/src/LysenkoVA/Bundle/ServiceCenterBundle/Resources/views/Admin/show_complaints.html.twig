{% extends '::base.html.twig' %}

{% block content %}

    <div class="container" style="
    margin-bottom:25px;width:350px;padding-left:105px;padding-right:5px;

    ">
        <h2>Complaints on</h2>
            <h4>{{ department }}:</h4>
        {% for complaint in department.complaints | reverse %}
           <div style="font-size:16px; color:darkred">
               <div class="bs-example">
                   <div class="alert alert-danger alert-error">
                       <span style="font-size:12px;font-style: oblique">
                           {{ complaint.date | date }}
                       </span>

                       <br>
                      {{ complaint.text }}
                   </div>

           </div>
        {% endfor %}

    </div>


{% endblock %}

