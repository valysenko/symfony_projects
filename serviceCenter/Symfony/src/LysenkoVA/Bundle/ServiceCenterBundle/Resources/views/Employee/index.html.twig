{% extends '::base.html.twig' %}

{% block content -%}

    <div class="container">
        <h1>Employee list</h1>
        <div class="row">
            <div class="col-lg-4 col-lg-offset-4">
                <input type="search" id="search" value="" class="form-control" placeholder="Search">
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <table class="table" id="table">
                    <thead>
                    <tr>
                        <th>Firstname</th>
                        <th>Surname</th>
                        <th>Nickname</th>
                        <th>Telephonenumber</th>
                        <th>Roles</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td>{{ entity.firstName }}</td>
                            <td>{{ entity.surname }}</td>
                            <td>{{ entity.username }}</td>
                            <td>{{ entity.telephoneNumber }}</td>
                            <td>{{ entity.roles[0] }}</td>
                            <td>
                                <a href="{{ path('admin_employee_edit', { 'id': entity.id }) }}">edit</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <hr>
            </div>
        </div>
        <a href="{{ path('admin_employee_new') }}">
            Create a new employee
        </a>

    </div>

{% endblock %}
